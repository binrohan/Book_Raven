@section scripts
{
    <script>
        // Variables
        let table;

        $(document).ready(function () {
            table = $("#books").DataTable({
                ajax: {
                    url: "/api/books",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function(data, type, movie) {
                            return "<a href='/books/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {
                        data: "genre.name"
                    },
                    {
                        data: "id",
                        render: (data) => "<button class='btn btn-danger js-delete' data-book-id=" + data + " onclick='deleteData(this)'>Delete</button>"
                        
                    }
                ]
            });
        });

        function deleteData(button) {
                if (confirm("Are you sure you want to delete the book?")) {
                    $.ajax({
                        url: "/api/books/" + button.getAttributeNode('data-book-id').value,
                        method: "DELETE",
                        success: function () {
                            table.row(button.parentNode.closest("tr")).remove().draw();
                        }
                    });
                }
        }
    </script>
}


