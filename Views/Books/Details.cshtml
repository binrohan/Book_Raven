@model Book_Raven.Models.Book
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Publishe Date: @Model.PublisheDate.ToString("MMMM dd, yyyy")</li>
    <li>Date Added: @Model.AddedDate.ToString("MMMM dd, yyyy")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

